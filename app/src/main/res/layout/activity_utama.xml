<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgmenu"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">
    </include>

    <Button
        android:id="@+id/btn_lapor_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50.0dip"
        android:text="DAFTAR LAPORAN"
        android:layout_below="@id/card_view"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <Button android:id="@+id/btn_lapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50.0dip"
        android:text="LAPOR"
        android:layout_marginTop="50dp"
        android:layout_below="@id/card_view"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="90dp"
        android:alpha="0.9"
        card_view:cardCornerRadius="8.0dip"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:text="Nama : "
            android:textColor="@android:color/black"
            android:textSize="25.0dip" />

        <TextView android:textSize="25.0dip"
            android:textColor="@android:color/black"
            android:id="@+id/text_nama"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120.0dip"
            android:layout_marginTop="10.0dip"
            android:text="aa" />

        <TextView android:textSize="25.0dip"
            android:textColor="@android:color/black"
            android:layout_gravity="center|left"
            android:id="@+id/perusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:text="Perusahaan : " />

        <TextView android:textSize="25.0dip"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:id="@+id/text_perusahaan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="108.0dip"
            android:layout_marginTop="10.0dip"
            android:text="aa" />
    </android.support.v7.widget.CardView>

</RelativeLayout>