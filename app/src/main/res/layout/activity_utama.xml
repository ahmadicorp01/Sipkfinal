<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UtamaActivity">



    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Nama Pegawai"
        android:layout_gravity="center|left"/>

    <TextView
        android:id="@+id/nama_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama"
        android:layout_marginLeft="110dp"
        android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perusahaan"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/perusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="peru"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="90dp"
            android:layout_gravity="center_vertical"/>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_lapor_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Lapor" />

    <Button
        android:id="@+id/btn_lapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_lapor_daftar"
        android:layout_centerVertical="true"
        android:text="Daftar Laporan" />
</RelativeLayout>
